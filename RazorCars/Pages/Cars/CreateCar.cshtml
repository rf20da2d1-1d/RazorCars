@page
@model RazorCars.Pages.Cars.CreateCarModel
@{
    ViewData["Title"] = "Opret en bil i Peters Cars";
}

<h1>Create An Event</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.NewCar.Id" class="custom-control-label">Bil Id</label>
                <input  asp-for="@Model.NewCar.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewCar.Model" class="custom-control-label">Bil Model</label>
                <input  asp-for="@Model.NewCar.Model" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewCar.Color" class="custom-control-label">Bil Farve</label>
                <input  asp-for="@Model.NewCar.Color" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create Car" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<a asp-page="Index">Tilbage til Visning af Cars</a>
